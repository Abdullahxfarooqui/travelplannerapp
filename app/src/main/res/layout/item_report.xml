<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="2dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/reporterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporter: John Doe"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reportedItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reported: trip (abc123)"
            android:textSize="15sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/reportReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason: Inappropriate content"
            android:textSize="15sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/reportTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-06-01 12:34"
            android:textSize="13sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/resolveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolve"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Item"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/blockBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block Organizer"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 