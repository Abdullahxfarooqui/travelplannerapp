<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".PlanTripActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/planTripTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Plan Your Trip"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Place Name -->
        <TextView
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3E3E3E"
            app:layout_constraintTop_toBottomOf="@id/planTripTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Place Description -->
        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/place_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Place Image -->
        <ImageView
            android:id="@+id/place_image"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/rounder_image_background"
            android:clipToOutline="true"
            android:elevation="2dp"
            android:outlineProvider="bounds"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_description" />

        <!-- Available Hotels Heading -->
        <TextView
            android:id="@+id/availableHotelsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Hotels"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E1E1E"
            app:layout_constraintTop_toBottomOf="@id/place_image"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView for Hotels -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_hotels"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/availableHotelsHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/hotel_item" />

        <!-- Details of the Trip Heading -->
        <TextView
            android:id="@+id/detailsOfTripHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details of the Trip"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E1E1E"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_hotels"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Trip Description -->
        <EditText
            android:id="@+id/trip_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Trip Description"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textColor="#424242"
            app:layout_constraintTop_toBottomOf="@id/detailsOfTripHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Organizer's Name -->
        <EditText
            android:id="@+id/organizer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Organizer's Name"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#424242"
            app:layout_constraintTop_toBottomOf="@id/trip_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Organizer's Phone Number -->
        <EditText
            android:id="@+id/organizer_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:maxLength="10"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textColor="#424242"
            app:layout_constraintTop_toBottomOf="@id/organizer_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Start & End Dates Side by Side -->
        <LinearLayout
            android:id="@+id/dateRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/organizer_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Start Date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="date"
                android:drawableStart="@drawable/ic_calender_small"
                android:drawablePadding="4dp"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="End Date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="date"
                android:drawableStart="@drawable/ic_calender_small"
                android:drawablePadding="4dp"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Trip Price -->
        <EditText
            android:id="@+id/trip_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Trip Price"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textColor="#424242"
            app:layout_constraintTop_toBottomOf="@id/dateRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Number of Seats -->
        <EditText
            android:id="@+id/seats_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number of Seats"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textColor="#424242"
            app:layout_constraintTop_toBottomOf="@id/trip_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Activities Heading -->
        <TextView
            android:id="@+id/activities_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Activities"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E1E1E"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/seats_available"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Activities Checkboxes -->
        <LinearLayout
            android:id="@+id/activities_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/activities_heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/checkbox_hiking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiking" />

            <CheckBox
                android:id="@+id/checkbox_swimming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swimming" />

            <CheckBox
                android:id="@+id/checkbox_camping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camping" />

            <CheckBox
                android:id="@+id/checkbox_sightseeing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sightseeing" />
        </LinearLayout>

        <!-- Stops Section Heading and Add Button Row -->
        <LinearLayout
            android:id="@+id/stops_section_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/activities_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/stops_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stops"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:textColor="#1E1E1E" />

            <ImageButton
                android:id="@+id/add_stop_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_add"
                android:contentDescription="Add Stop"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Stops RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stops_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/stops_section_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Daily Activities Section -->
        <LinearLayout
            android:id="@+id/daily_activities_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/stops_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/daily_activities_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daily Activities"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1E1E1E" />

            <ImageButton
                android:id="@+id/add_day_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_add"
                android:contentDescription="Add Day"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Container for Dynamic Day Activities -->
        <LinearLayout
            android:id="@+id/days_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/daily_activities_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Create Trip Button -->
        <Button
            android:id="@+id/createTripButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create Trip"
            android:textColor="@android:color/white"
            android:backgroundTint="#3F51B5"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/days_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>