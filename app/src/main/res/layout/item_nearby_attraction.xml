<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/attractionNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attraction Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/attractionTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="13sp"
            android:textColor="@color/textSecondary"
            android:layout_marginEnd="12dp" />
        <TextView
            android:id="@+id/attractionDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5 km"
            android:textSize="13sp"
            android:textColor="@color/primary" />
    </LinearLayout>

    <TextView
        android:id="@+id/attractionAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="12sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getDirectionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:textAllCaps="false"
        android:icon="@drawable/ic_location"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_marginTop="8dp"
        android:layout_gravity="end" />

</LinearLayout> 