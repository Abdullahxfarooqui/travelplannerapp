<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/enrolled_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enrolled_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/enrolled_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 0300-1234567"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/enrolled_user_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seats: 2"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/enrolled_user_booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booked: 01/01/2025 12:00"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginTop="2dp"/>
</LinearLayout>