<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Summary Cards Row -->
    <LinearLayout
        android:id="@+id/summaryCardsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Total Bookings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/md_theme_blue"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/md_theme_blue_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ic_event"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:tint="@color/md_theme_blue" />

                <TextView
                    android:id="@+id/totalBookingsText"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_blue"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:text="Bookings"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_blue" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Total Revenue Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/md_theme_green"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/md_theme_green_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ic_attach_money"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:tint="@color/md_theme_green" />

                <TextView
                    android:id="@+id/totalRevenueText"
                    android:text="Rs. 0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_green"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:text="Revenue"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_green" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- New Users Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/md_theme_amber"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/md_theme_amber_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ic_person_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:tint="@color/md_theme_amber" />

                <TextView
                    android:id="@+id/newUsersText"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_amber"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:text="New Users"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_amber" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Booking Trends Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bookingTrendsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/summaryCardsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Booking Trends"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/bookingsChart"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Revenue Breakdown Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/revenueBreakdownCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/bookingTrendsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Revenue Breakdown"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/revenueChart"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/dashboardProgressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/revenueBreakdownCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="32dp">

        <ImageView
            android:src="@drawable/ic_dashboard_empty"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"/>

        <TextView
            android:text="No bookings yet. Your dashboard will populate as activity begins."
            android:textSize="16sp"
            android:textColor="@color/md_theme_grey"
            android:gravity="center"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout> 