<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/organizerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222" />

        <TextView
            android:id="@+id/organizerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/organizerOrganization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization: "
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/organizerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="14sp"
            android:textColor="#888"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnBlockOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Block"
                android:textSize="12sp"
                android:backgroundTint="#fff"
                android:textColor="#D32F2F"
                android:layout_marginEnd="8dp"
                style="@android:style/Widget.Material.Button.Borderless"/>

            <Button
                android:id="@+id/btnApproveOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Approve"
                android:textSize="12sp"
                android:backgroundTint="#fff"
                android:textColor="#388E3C"
                android:layout_marginEnd="8dp"
                style="@android:style/Widget.Material.Button.Borderless"/>

            <Button
                android:id="@+id/btnDeleteOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Delete"
                android:textSize="12sp"
                android:backgroundTint="#fff"
                android:textColor="#1976D2"
                style="@android:style/Widget.Material.Button.Borderless"/>

            <Button
                android:id="@+id/btnEditOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Edit"
                android:textSize="12sp"
                android:backgroundTint="#fff"
                android:textColor="#FFA000"
                style="@android:style/Widget.Material.Button.Borderless"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 