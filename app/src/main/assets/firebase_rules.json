{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && (auth.uid == $uid || root.child('admins').child(auth.uid).exists())"
      }
    },
    "properties": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["hostId", "location", "pricePerNight"]
    },
    "trips": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["organizerId", "placeName", "startDate"]
    },
    "bookings": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["itemId", "userId", "bookingType", "status", "createdAt", "hostId", "startDate", "endDate"],
      "$bookingId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('userId').val() == auth.uid || data.child('hostId').val() == auth.uid || !data.exists())"
      }
    },
    "profile_images": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
} 